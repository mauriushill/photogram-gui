<h1><%= @the_user.username %></h1>

<dl>
<dt>ID</dt>
<dd><%= @the_user.id %></dd>


<dt>Edit user</dt>
<dd><form action="/update_user/<%= @the_user.username %>" method="post">
      <label for="user_field">Username</label>
        <input id="user_field" type="text" name="user_update" value="<%= @the_user.username %>">
  <button>
  Update user
  </button>
  </form>
</dd>
</dl>

<h2>Own photos(<%= @the_user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @the_user.photo_line.order(:owner_id).each do |photo| %>
  <tr>
    <td><img src="<%= photo.image %>"></td>

    <td><%= @the_user.username %></td>

    <td><%= photo.caption %></td>

    <td><%= photo.created_at %></td>
    
    <td><a href="/photos/<%= photo.id %>">Show details</a></td>

  </tr>
  <% end %>
  
</table>
