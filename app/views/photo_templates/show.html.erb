<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
  <img src="<%= @the_photo.image %>">
  </dd>

  <dt>Caption</dt>
    <dd><%= @the_photo.caption %></dd>

    <dt>Owner</dt>
      <dd><%= @the_photo.user.username %></dd>

      <dt>Posted</dt>
        <dd><%= @the_photo.created_at %></dd>

      <dt>Edit photo</dt>
        <dd><form action="/update_photo/<%= @the_photo.id %>" method="post">
      <label for="url_field">Image</label>
        <input id="url_field" type="text" name="image_update" value="<%= @the_photo.image %>">

        <label for="caption_field">Caption</label>
          <input id="caption_field" type="text" name="caption_update" value="<%= @the_photo.caption %>">
  <button>
  Update photo
  </button>
  </form>
<dd>

<dt>Delete photo</dt>
  <dd><a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a></dd>
</dl>

<h2>Comments</h2>

<table>
<tr>
<th>Commenter</th>
<th>Comment</th> 
<th>Posted</th>
</tr>

<% @the_photo.comments.order(:created_at => :desc).each do |comment| %>
<tr>
<td><%= comment.commenter.username %></td>
<td><%= comment.body %></td>
<td><%= comment.created_at %></td>
</tr>

<% end %>
</table>

<h3>Add a new comment</h3>
<form action="/insert_comment" method="post">

<label for="id_field">Photo ID</label>
<input id="id_field" type="text" name="photo_id" value="<%= @the_photo.id %>">

<label for="author_field">Author ID </label>
<input id="author_field" type="text" name="author_id" placeholder="Enter your author ID">

<label for="comment_field">Comment</label>
<input id="comment_field" type="text" name="comment_add" placeholder="Enter a comment...">

<button>Add comment</button>

</form>
