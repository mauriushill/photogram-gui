<h1>List of photos</h1>

<form action="/insert_photo" method="post">

  <label for="pic_add">Image</label>
    <input id="pic_add" type="text" name="pic_url" placeholder="Enter a URL for the image">

  <label for="caption">Caption</label>
    <textarea id="caption" type="text" name="caption_id" placeholder="Enter a caption for the photo..."></textarea>

    <label for="owner_add">Owner ID</label>
      <input id="owner_add" type="text" name="owner" placeholder="Enter an ID of a User">

      <button>Add photo</button>


</form>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @list_of_photos.each do |pics| %>
  <tr>
    <td><img src="<%= pics.image %>" width="100"></td>
    <td><%= pics.caption %></td>
    <td><%= pics.user.username %></td>
    <td><%= pics.created_at %></td>
    <td><a href="/photos/<%= pics.id %>">Show details</td>
  </tr>
  <% end %>
</table>
